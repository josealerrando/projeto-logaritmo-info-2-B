 #include <stdio.h>



int main(){
    int n1, n2, soma, sub, multi, divi, res, t;

    printf("Informe o primeiro numero: ");
    scanf("%d", &n1);

    printf("Informe o segundo numero: ");
    scanf("%d", &n2);

    printf("Que operacao com %d e %d voce deseja realizar: \n 1.Soma \n 2.Subtracao \n 3.Multiplicacao \n 4. Divisao \n 5.Resto \n", n1, n2);
    scanf("%d", &t);

    switch (t){
        case 1:{
            soma = n1 + n2;
            printf("A soma e %d \n", soma);
            break;
        }
        case 2:{
            sub = n1 - n2;
            printf("A subtracao e %d \n", sub);
            break;
        }
        case 3:{
            multi = n1 * n2;
            printf("A multiplicacao e %d \n", multi);
            break;
        }
        case 4:{
            divi = n1 / n2;
            printf("A divisao inteira e %d \n", divi);
            break;
        }
        default:{
            res = n1 % n2;
            printf("O resto e %d \n", res);
            break;
        }
    };
}
#include <stdio.h>
#include <stdlib.h>

int main() {
    int num, r1, r2, r3, r4;

    printf("Digite um numero de 5 digitos: ");
    scanf("%d", &num);

    printf("a dezena de milhar é: %d\n", num / 10000);
    r1 = num % 10000;
    printf("a unidade de milhar é: %d\n", r1 / 1000);
    r2 = r1 % 1000;
    printf("a centena é: %d\n", r2 / 100);
    r3 = r2 % 100;
    printf("a dezena é: %d\n", r3 / 10);
    r4 = r3 % 10;
    printf("a unidade é: %d\n", r4); 

    return 0;
}
